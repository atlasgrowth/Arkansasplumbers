modules = ["nodejs-20", "python-3.11", "web"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Start Dev Server"

[[workflows.workflow]]
name = "Start Dev Server"
author = 39581396

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd website && npm run dev -- --host 0.0.0.0"

[[ports]]
localPort = 3000
externalPort = 80

[deployment]
run = ["sh", "-c", "cd website && npx serve dist"]
build = ["sh", "-c", "cd website && npm run build"]
